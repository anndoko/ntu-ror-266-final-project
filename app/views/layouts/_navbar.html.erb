<nav class = "navbar navbar-inverse">
  <div class = "container-fluid">
<!-- Navbar header: link to root_path (Main)-->
    <div class = "navbar-header">
      <%= link_to "Main", root_path, :class => 'navbar-brand' %>
    </div>
    <div class = "collapse navbar-collapse" id = "bs-example-navbar-collapse-1">
      <ul class = "nav navbar-nav">
<!-- User action: create new posts -->
        <% if logged_in? %>
          <li><%= link_to "Post Here!", new_post_path %></li>
        <% else %>
          <li><%= link_to "Register", register_path %></li>
        <% end %>
      </ul>
<!-- Dropdown -->
      <ul class = "nav navbar-nav navbar-right">  
        <% if logged_in? %>
          <li class = "dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= current_user.name %> <span class = "caret"></span>
            <% end %>
<!-- Dropdown menu-->
<!-- User action: view profile / logout -->
            <ul class = "dropdown-menu" >
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li role = "separator" class = "divider"></li>
              <li><%= link_to "Log Out", logout_path %></li>
            </ul>
          </li>
<!-- Guest action: register / login -->
        <% else %>
          <li><%= link_to "Register", register_path %></li>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
